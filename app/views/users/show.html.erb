<div class="container">
<h1 class="jumbotron justify-content-center">Hello, <%=current_user.first_name.capitalize%></h1>
<div class="row">
  <div class="col-xs-9 col-md-7">
      <h3>Your Current Listings:</h3><br>

            <%if current_user.listings.empty?%>
                <p>No Listings! Create One!</p>
            <%end%>

      <%current_user.listings.each do |l|%>
      <a href="/listings/<%=l.id%>"><p><%=l.title%></p></a>
      <%end%>

    <br>
     <a href="/listings/new"><button class="btn btn-primary">New Listing</button></a>
     <a href="/items"><button class="btn btn-secondary">All Items</button></a>
     </div>
  <div class="col-sm-3">
 <h3>User Settings:</h3><br>
<a href="/users/edit"><button class="btn btn-info" style="align: right;">Edit User Details</button></a>
<br><br>
<a href="/users/delete"><button class="btn btn-danger" style="align: right;">DELETE MY ACCOUNT</button></a>
</div>
</div>
</div>