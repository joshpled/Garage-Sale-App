<h2>Hello, <%=current_user.username.capitalize%></h2>

 <div class="content">
 
      <h3>Your Current Listings:</h3><br>
      <% if current_user.listings.empty?%>
      <p>No Listings! Create One!</p>
      <%end%>
      <%current_user.listings.each do |l|%>
      <a href="/listings/<%=l.id%>"><p><%=l.title%></p></a>
      <%end%>
      <br>
     <a href="/listings/new"><button class="button button2">New Listing</button></a>
     <a href="/items"><button class="button button1">All Items</button></a>
    </div>

<a href="/users/edit"><button class="button button1" style="align: right;">CHANGE USER DETAILS</button></a>
