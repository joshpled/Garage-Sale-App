<div class="container">
  <br>
  <div class="panel panel-default">
    <div class="panel-heading text-center">
      <h3 class="panel-title">Edit Item</h3>
    </div>
    <BR>
    <div class="panel-body">
      <form action="/items/<%=@item.id%>" method="POST">
        <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group">
        <label>Name: </label>
          <input type="text" name="name" id="name" class="form-control input-sm" value="<%=@item.name%>" required>
        </div>
        <div class="form-group">
        <label>Category: </label>
          <input type="text" name="category" id="category" class="form-control input-sm" value="<%=@item.category%>" required>
        </div>
        <div class="form-group">
        <label>Price: </label>
          <input type="number" name="price" id="price" class="form-control input-sm" value="<%=@item.price%>" required>
        </div>
        <input type="submit" value="Edit" class="btn btn-info btn-block">
      </form>
    </div>
  </div>
</div>
