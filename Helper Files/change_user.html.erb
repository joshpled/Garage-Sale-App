<%if flash[:email_error] != nil%>
  <div class="alert alert-danger" role="alert">
    <%= flash[:email_error]%>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<%end%>
<div class="container">
  <br>
  <div class="panel panel-default">
    <div class="panel-heading text-center">
      <h3 class="panel-title">Edit User Details</h3>
    </div>
    <BR>
    <div class="panel-body">
      <form action="/users/:<%=current_user.id%>" method="POST">
        <input type="hidden" id="hidden" name="_method" value="patch">
        <div class="form-group">
          <label>Username: </label>
          <input type="text" name="username" id="username" class="form-control input-sm" value="<%=current_user.username%>" required>
        </div>
        <div class="form-group">
          <label>Email: </label>
          <input type="text" name="email" id="email" class="form-control input-sm" value="<%=current_user.email%>" required>
        </div>
        <input type="submit" value="Edit" class="btn btn-info btn-block">
      </form>
      <a href="/"><button class="btn btn-secondary  btn-block" >Cancel</button>
      </div>
    </div>
  </div>
